<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_task_margin"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/card_view_task_radious">

    <LinearLayout
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/card_view_task_chk_done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_task_chk_done_margin"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_view_task_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/card_view_task_tv_title_size"
                tools:text="Title" />

            <TextView
                android:id="@+id/card_view_task_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_tv_time"
                android:textSize="@dimen/card_view_task_tv_time_size"
                tools:text="20/11/2016" />

            <TextView
                android:id="@+id/card_view_task_tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_tv_time"
                android:textSize="@dimen/card_view_task_tv_priority"
                tools:text="!!!!" />

        </LinearLayout>


        <Switch
            android:id="@+id/card_view_task_sw_on_off_remind"
            android:layout_width="0dp"
            android:layout_weight="2"

            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
</android.support.v7.widget.CardView>
